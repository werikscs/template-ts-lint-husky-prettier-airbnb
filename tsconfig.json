{
  "compilerOptions": {
    "target": "es6",
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "module": "CommonJS",
    "rootDirs": ["./src"],
    "baseUrl": "/.src",
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "paths": {
      "@/*": ["*"]
    },
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}